@page
@using EasyAbp.CacheManagement.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<CacheManagementResource> L
@model EasyAbp.CacheManagement.Web.Pages.CacheManagement.CacheItems.CacheItem.ClearCacheModalModel
@{
    Layout = null;
}
<script>
    let id = '@Model.Id';
</script>

<abp-dynamic-form abp-model="ViewModel" data-ajaxForm="true" asp-page="ClearCacheModal">
    <abp-modal>
        <abp-modal-header title="@L["ClearCache"].Value"></abp-modal-header>
        <abp-modal-body>
            <input type="hidden" asp-for="Id"/>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer>
            <abp-button data-dismiss="modal" button-type="Secondary">@L["Close"].Value</abp-button>
            <abp-button type="submit" button-type="Danger" busy-text="@L["ClearAllCache"].Value">@L["ClearAllCache"].Value</abp-button>
        </abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>